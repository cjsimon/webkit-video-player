{
  "name": "Video",
  "main": "index.html",
  "description": "Fullscreen Video Player",
  "version": "0.1.0",
  "keywords": ["video"],
  
  "window": {
    "title": "Video",
    "icon": "images/icon.png",
    "fullscreen": false,
    
    "frame": false,
    "toolbar": false,
    "transparent": false,
    
    "focus": true,
    "always-on-top": false,
    "always_on_top": false,
    
    "position": "center",
    "width": 640,
    "height": 480,
    
    "resizable": true,
    "min_width": 100,
    "min_height": 100,
    
    "show": true,
    "show_in_taskbar": true
  },
  
  "webkit": {
    "page-cache": false,
    "java": false,
    "plugin": false
  },
  
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/cjsimon/webkit-video-player",
      "path": "/"
    }
  ],
  
  "scripts": {
    "start": "nw ."
  },
  
  "devDependencies": {
    "video.js": "^4.9.1"
  },
  
  "maintainers":
  [
    {
      "name": "Christopher Simon",
      "email": "cjsimon333@gmail.com",
      "web": "https://github.com/cjsimon/webkit-video-player"
    }
  ],
  
  "bugs": "https://github.com/cjsimon/webkit-video-player/issues"
}
